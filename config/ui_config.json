{
  "elements": {
    "shape": {
      "id": "shape",
      "type": "select",
      "label": "Shape",
      "state_path": "frame_design.shape",
      "options": [
        {"value": "circular", "label": "Circular"},
        {"value": "rectangular", "label": "Rectangular"},
        {"value": "diamond", "label": "Diamond"}
      ]
    },
    "size": {
      "id": "size",
      "type": "range",
      "label": "Size",
      "state_path": "frame_design.finish_x",
      "on_change_triggers": [
        {
          "action": "apply_size_defaults",
          "source_path": "size_defaults"
        }
      ]
    },
    "sections": {
      "id": "sections",
      "type": "select",
      "label": "Sections",
      "state_path": "frame_design.number_sections",
      "options": [
        {"value": 1, "label": "1"},
        {"value": 2, "label": "2"},
        {"value": 3, "label": "3"},
        {"value": 4, "label": "4"}
      ]
    },
    "slots": {
      "id": "slots",
      "type": "range",
      "label": "Elements",
      "state_path": "pattern_settings.number_slots",
      "display_value_id": "slotsValue"
    },
    "width": {
      "id": "width",
      "type": "range",
      "label": "Width",
      "state_path": "frame_design.finish_x",
      "display_value_id": "widthValue"
    },
    "height": {
      "id": "height",
      "type": "range",
      "label": "Height",
      "state_path": "frame_design.finish_y",
      "display_value_id": "heightValue"
    },
    "patternDiameter": {
      "id": "patternDiameter",
      "type": "select",
      "label": "Pattern Dia.",
      "state_path": "pattern_settings.pattern_diameter",
      "options": [
        {"value": 24, "label": "24\""},
        {"value": 36, "label": "36\""},
        {"value": 48, "label": "48\""},
        {"value": 60, "label": "60\""}
      ]
    },
    "separation": {
      "id": "separation",
      "type": "range",
      "label": "Gap",
      "state_path": "frame_design.separation",
      "display_value_id": "separationValue"
    },
		"side_margin": {
			"id": "side_margin",
			"type": "range",
			"label": "Side Margin",
			"state_path": "pattern_settings.side_margin",
			"display_value_id": "sideMarginValue"
		},
    "woodSpecies": {
      "id": "woodSpecies",
      "type": "select",
      "label": "Wood Species",
      "state_path": "frame_design.section_materials[].species",
      "options_from_endpoint": "/api/config/wood-materials",
      "options_path": "species_catalog",
      "default_value_from_endpoint": "/api/config/wood-materials",
      "default_value_path": "default_species"
    },
    "grainDirection": {
      "id": "grainDirection",
      "type": "select",
      "label": "Grain Direction",
      "state_path": "frame_design.section_materials[].grain_direction",
      "options": [
        { "value": "horizontal", "label": "Horizontal" },
        { "value": "vertical", "label": "Vertical" },
        { "value": "radiant", "label": "Radiant" },
        { "value": "diamond", "label": "Diamond" }
      ],
      "default_value_from_endpoint": "/api/config/wood-materials",
      "default_value_path": "default_grain_direction"
    }
  },
  "buttons": {
    "updateDesign": {
      "id": "updateButton",
      "label": "Update Design",
      "action": "submit_composition_update"
    },
    "resetCamera": {
      "id": "resetCameraButton",
      "label": "â†»",
      "title": "Reset Camera View",
      "action": "reset_camera"
    }
  },
 "upload": {
    "container_id": "uploadContainer",
    "drop_zone_id": "uploadDropZone",
    "file_input_id": "fileInput",
    "hint_delay_ms": 3000,
    "messages": {
      "invalid_type": "Please upload an audio file (MP3, WAV, or FLAC)",
      "file_too_large": "File size must be less than {max_size}MB",
      "drop_hint": "Drop your audio file here"
    }
  },
  "thumbnail_config": {
    "base_path": "/assets/style/thumbnails",
    "filter_base_path": "/assets/style/filters",
    "extension": ".png"
  },
  "categories": {
    "wood": {
      "label": "WOOD",
      "order": 2,
      "subcategories": {
        "panel": {
          "label": "Style",
          "panel_title": "ART STYLE",
					"panel_help": "Choose your art style. Each combines a panel shape with a waveform pattern. Use the filter icons above to narrow by shape or pattern type.",
          "filters": {
            "shape": {
              "type": "single",
              "label": "Panel Shape",
              "ui_state_path": "frame_design.shape",
              "options": [
                { "id": "circular", "label": "Circle", "thumbnail": "shape_circle", "tooltip": "Circular Panel" },
                { "id": "rectangular", "label": "Rectangle", "thumbnail": "shape_rectangle", "tooltip": "Rectangular Panel" },
                { "id": "diamond", "label": "Diamond", "thumbnail": "shape_diamond", "tooltip": "Diamond Panel" }
              ],
              "default": "circular"
            },
            "slot_pattern": {
              "type": "single",
              "label": "Waveform Pattern",
              "ui_state_path": "pattern_settings.slot_style",
              "options": [
                { "id": "radial", "label": "Radial", "thumbnail": "pattern_radial", "tooltip": "Radial Waveform" },
                { "id": "linear", "label": "Linear", "thumbnail": "pattern_linear", "tooltip": "Linear Waveform" }
              ],
              "default": "radial"
            }
          },
          "options": {
            "number_sections": {
              "label": "Number of Sections",
              "type": "archetype_grid",
              "archetype_source": "archetypes",
              "display_field": "label",
              "sort_by": "number_sections"
            }
          }
        },
        "wood_species": {
          "label": "Wood & Grain",
					"panel_title": "WOOD & GRAIN",
					"panel_help": "Select your wood species and grain direction. Each thumbnail shows how the grain pattern will appear on your panel. Click any combination to preview.",
					"enables_section_selection": true,
          "filters": {},
          "options": {
            "main": {
              "type": "wood_species_image_grid"
            }
          }
        },
        "layout": {
          "label": "Layout",
					"panel_title": "LAYOUT",
					"panel_help": "Adjust physical dimensions and element count. Size controls overall scale, elements affects waveform detail. Some options may be limited by your chosen art style.",
          "filters": {},
          "options": {
            "main": {
              "type": "slider_group",
              "element_keys": ["size", "width", "height", "slots", "separation", "side_margin"]
            }
          }
        },
        "backing": {
          "label": "Backing",
					"panel_title": "BACKING",
					"panel_help": "Add an optional backing material behind your panel. Backings add depth and color contrast, making the waveform pattern more visible.",
          "note": "",
          "filters": {},
          "options": {
            "backing_panel": {
              "type": "backing_selector"
            }
          }
        },
        "frames": {
          "label": "Frames & Shelves",
					"panel_title": "FRAMES",
          "panel_help": "Add a decorative frame around your panel. Coming soon.",
          "note": "",
          "filters": {},
          "options": {}
        }
      }
    },
    "print": {
      "label": "PRINTS",
      "order": 3,
      "subcategories": {
        "canvas": {
          "label": "Canvas",
					"panel_title": "CANVAS",
          "panel_help": "Print your waveform design on gallery-wrapped canvas. Coming soon.",
          "note": "",
          "filters": {},
          "options": {}
        },
        "fine_art_paper": {
          "label": "Fine Art Paper",
					"panel_title": "FINE ART PAPER",
          "panel_help": "Print your waveform design on archival fine art paper. Coming soon.",
          "note": "",
          "filters": {},
          "options": {}
        },
        "metal": {
          "label": "Metal",
					"panel_title": "METAL",
          "panel_help": "Print your waveform design on brushed aluminum for a modern look. Coming soon.",
          "note": "",
          "filters": {},
          "options": {}
        }
      }
    },
    "backgrounds": {
      "label": "STAGING",
      "order": 4,
      "subcategories": {
				"rooms": {
          "label": "Room Settings",
					"panel_title": "ROOM SETTINGS",
          "panel_help": "Preview your panel in realistic room environments. Each scene includes appropriate lighting and positioning to show how the art will look in your space.",
          "filters": {},
          "options": {
            "rooms_grid": {
              "type": "thumbnail_grid"
            }
          }
        },
        "paint": {
          "label": "Wall Finish",
					"panel_title": "PAINT COLORS",
          "panel_help": "Choose a wall color to see how your panel will look against different backgrounds. Colors are grouped by tone for easy browsing.",
          "filters": {},
          "options": {
            "paint_grid": {
              "type": "thumbnail_grid"
            }
          }
        }
      }
    },
    "audio": {
      "label": "AUDIO",
      "order": 1,
      "subcategories": {
        "tour": {
          "label": "Take the Tour",
					"panel_title": "take the tour",
          "panel_help": "Take a guided tour to see how WaveDesigner transforms audio into art. Perfect for first-time visitors.",
          "note": "",
          "filters": {},
          "options": {
            "start_tour": {
              "type": "tour_launcher"
            }
          }
        },
        "collections": {
          "label": "View Our Collections",
					"panel_title": "COLLECTIONS",
          "panel_help": "Browse pre-made designs from popular hymns and worship songs. Select one to use as a starting point for your custom piece.",
          "note": "",
          "filters": {},
          "options": {
            "collections_browser": {
              "type": "collections_browser"
            }
          }
        },
        "custom": {
          "label": "Upload Your Song",
					"panel_title": "upload your worship",
          "panel_help": "Upload your own audio file to create a unique waveform design. Supports MP3, WAV, and FLAC formats up to 50MB.",
          "filters": {},
          "options": {
            "file_upload": {
              "type": "audio_upload"
            }
          }
        },
				"slicing": {
          "label": "Optional Audio Tuning",
          "panel_title": "PICK A MOMENT",
          "panel_help": "Select a section of your audio to use for the waveform design.",
          "filters": {},
          "options": {
            "audio_slicer": {
              "type": "audio_trimmer"
            }
          }
        }
      }
    }
  }
}